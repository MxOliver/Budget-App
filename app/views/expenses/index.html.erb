<h1>Budget Planner</h1>

<div class="row">
    
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Expense Catagory</th>
            <th scope="col">Planned Amount</th>
            <th scope="col">Actual Ammount</th>
            <th scope="col">Edit/Delete</th>
        </tr>
        </thead>
        <% @expenses.each  do |expense| %>
            <tr>
                <td>
                <%= expense.name %>
                </td>

                <td>
                <%= expense.planned_amount %>
                </td>

                <td>
                <%= expense.actual_amount %>
                </td>

                <td>
                <%= link_to "Edit", edit_expense_path(expense), class: 'btn btn-warning' %>
                <%= link_to "Delete", expense, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this?'} %>
                </td>
            </tr>
            
        <% end %>
                <tr>
                <td></td>
                <td>
                    Total: <%= @expenses.sum(:planned_amount) %>
                </td>
                <td>
                    Total: <%= @expenses.sum(:actual_amount) %>
                </td>
                <td></td>
                </tr>
        </table>

</div>

<%= link_to "New Expense", new_expense_path, class: 'btn btn-success' %>

